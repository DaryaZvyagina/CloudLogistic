<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CloudLogistics.Views.RegisterPage">
    <StackLayout>

        <Label Text="Ваш email"
               TextColor="White"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding EMail}"/>
        <Label Text="Пароль"
               TextColor="White"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding Password}" IsPassword ="True" />
        <Label Text="Еще какие-то данные"
               TextColor="White"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding One}"/>
        <Label Text="И тут данные"
               TextColor="White"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding Two}"/>
        <Label Text="И даже тут"
               TextColor="White"
               HorizontalOptions="Center"/>
        <Entry Text="{Binding Three}"/>

        <Button Text="Зарегистрироваться"
				Command="{Binding ProfileCommand}"
                BackgroundColor="White"
                TextColor="#FF2346C4"/>

    </StackLayout>
</ContentPage>